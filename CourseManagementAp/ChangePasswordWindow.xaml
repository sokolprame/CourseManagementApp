<Window x:Class="CourseManagementAp.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseManagementAp"
        mc:Ignorable="d"
        Title="Изменить пароль" Height="283" Width="400">
    <Grid Margin="0,0,0,-6">
        <TextBlock Text="Текущий пароль" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,34,0,0"/>
        <PasswordBox x:Name="CurrentPasswordBox" Width="200" Margin="112,27,88,210" VerticalContentAlignment="Center"/>

        <TextBlock Text="Новый пароль" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,80,0,0"/>
        <PasswordBox x:Name="NewPasswordBox" Width="200" Margin="112,80,88,162" VerticalContentAlignment="Center"/>

        <Button Content="Сменить пароль" Width="200" Height="40" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="112,168,0,0" Click="ChangePasswordButton_Click"/>
    </Grid>
</Window>
