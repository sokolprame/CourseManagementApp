<Window x:Class="CourseManagementAp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseManagementAp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!-- Кнопка для открытия списка курсов -->
        <Button Content="Курсы" Width="100" Height="27" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,19,0,0" Click="CoursesButton_Click"/>

        <!-- Кнопка для открытия списка преподавателей -->
        <Button Content="Преподаватели" Width="169" Height="31" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="150,19,0,0" Click="TeachersButton_Click"/>

        <!-- Кнопка для входа -->
        <Button Content="Вход" Width="79" Height="27" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="564,19,0,0" Click="LoginButton_Click"/>

        <!-- Кнопка для регистрации -->
        <Button Content="Регистрация" Width="123" Height="27" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="667,19,0,0" Click="RegisterButton_Click"/>
    </Grid>
</Window>
