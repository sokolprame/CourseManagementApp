<Window x:Class="CourseManagementAp.AddCourseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить курс" Height="400" Width="400">
    <Grid>
        <!-- Заголовок окна -->
        <TextBlock Text="Добавить новый курс" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="16" Margin="0,10,0,0"/>

        <!-- Поле для ввода названия курса -->
        <TextBlock Text="Название курса:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,50,0,0"/>
        <TextBox x:Name="CourseNameTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,50,20,0" Width="200"/>

        <!-- Поле для ввода описания курса -->
        <TextBlock Text="Описание курса:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,100,0,0"/>
        <TextBox x:Name="CourseDescriptionTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,100,20,0" Width="200" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>

        <!-- Поле для ввода длительности курса -->
        <TextBlock Text="Длительность (часов):" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,180,0,0"/>
        <TextBox x:Name="CourseDurationTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,180,20,0" Width="200"/>

        <!-- Поле для ввода стоимости курса -->
        <TextBlock Text="Стоимость курса:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,230,0,0"/>
        <TextBox x:Name="CoursePriceTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,230,20,0" Width="200"/>

        <!-- Кнопка для добавления курса -->
        <Button Content="Добавить" HorizontalAlignment="Center" VerticalAlignment="Top" Width="150" Height="40" Margin="0,300,0,0" Click="AddButton_Click"/>
    </Grid>
</Window>
