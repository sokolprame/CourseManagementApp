<Window x:Class="CourseManagementAp.ApplyForCourseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseManagementAp"
        mc:Ignorable="d"
        Title="Подать заявку на курс" Height="300" Width="400">
    <Grid>
        <ComboBox x:Name="CoursesComboBox" DisplayMemberPath="Name" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="200"/>
        <Button Content="Подать заявку" Width="200" Height="40" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="10,50,10,10" Click="ApplyButton_Click"/>
    </Grid>
</Window>
