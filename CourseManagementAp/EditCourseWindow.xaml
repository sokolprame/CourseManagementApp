<Window x:Class="CourseManagementAp.EditCourseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseManagementAp"
        mc:Ignorable="d"
           Title="Редактировать курс" Height="300" Width="400">
    <Grid>
        <TextBlock Text="Название курса" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox x:Name="CourseNameTextBox" Width="200" Height="30" Margin="126,10,74,244"/>

        <TextBlock Text="Описание" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,70,0,0"/>
        <TextBox x:Name="CourseDescriptionTextBox" Width="200" Height="30" Margin="126,78,74,176"/>

        <Button Content="Сохранить изменения" Width="200" Height="40" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="126,153,0,0" Click="SaveCourseButton_Click"/>
    </Grid>
</Window>
