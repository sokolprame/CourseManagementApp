<Window x:Class="CourseManagementAp.AddTeacherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить преподавателя" Height="350" Width="400">
    <Grid Margin="10">
        <!-- ФИО преподавателя -->
        <TextBlock Text="ФИО:" VerticalAlignment="Top" Margin="0,10,0,0"/>
        <TextBox x:Name="FullNameTextBox" VerticalAlignment="Top" Margin="0,35,0,0" Height="25"/>

        <!-- Email преподавателя -->
        <TextBlock Text="Email:" VerticalAlignment="Top" Margin="0,70,0,0"/>
        <TextBox x:Name="EmailTextBox" VerticalAlignment="Top" Margin="0,95,0,0" Height="25"/>

        <!-- Телефон преподавателя -->
        <TextBlock Text="Телефон:" VerticalAlignment="Top" Margin="0,130,0,0"/>
        <TextBox x:Name="PhoneTextBox" VerticalAlignment="Top" Margin="0,155,0,0" Height="25"/>

        <!-- Специализация преподавателя -->
        <TextBlock Text="Специализация:" VerticalAlignment="Top" Margin="0,190,0,0"/>
        <TextBox x:Name="SpecializationTextBox" VerticalAlignment="Top" Margin="0,215,0,0" Height="25"/>

        <!-- Кнопка добавления -->
        <Button Content="Добавить преподавателя" VerticalAlignment="Bottom" Margin="0,0,0,10" Height="40" Click="AddTeacherButton_Click"/>
    </Grid>
</Window>
