<Window x:Class="CourseManagementAp.AddTeacherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseManagementAp"
        mc:Ignorable="d"
       Title="Добавить преподавателя" Height="318" Width="400">
    <Grid Margin="0,0,0,-6">
        <TextBlock Text="ФИО преподавателя" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="34,34,0,0"/>
        <TextBox x:Name="TeacherNameTextBox" Width="200" Height="30" Margin="171,34,29,244"/>

        <TextBlock Text="Email" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="76,91,0,0"/>
        <TextBox x:Name="TeacherEmailTextBox" Width="200" Height="30" Margin="171,84,29,194"/>

        <TextBlock Text="Телефон" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="67,149,0,0"/>
        <TextBox x:Name="TeacherPhoneTextBox" Width="200" Height="30" Margin="171,139,29,139"/>

        <Button Content="Добавить преподавателя" Width="200" Height="40" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,234,0,0" Click="AddTeacherButton_Click"/>
    </Grid>
</Window>
