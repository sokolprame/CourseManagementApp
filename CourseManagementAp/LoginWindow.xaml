<Window x:Class="CourseManagementAp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LoginWindow" Height="300" Width="425" WindowStartupLocation="CenterScreen">
    <Grid>
        <!-- Заголовок -->
        <TextBlock Text="Вход в систему"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   FontSize="18"
                   Margin="0,10,0,0" />

        <!-- Поле для Email -->
        <TextBlock Text="Email:"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"
                   Margin="30,60,0,0"
                   Foreground="Gray" />
        <TextBox x:Name="EmailTextBox"
                 Width="250" Height="30"
                 VerticalAlignment="Top"
                 HorizontalAlignment="Left"
                 Margin="100,60,0,0"
                 VerticalContentAlignment="Center"/>

        <!-- Поле для пароля -->
        <TextBlock Text="Пароль:"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"
                   Margin="30,110,0,0"
                   Foreground="Gray" />
        <PasswordBox x:Name="PasswordTextBox"
                     Width="250" Height="30"
                     VerticalAlignment="Top"
                     HorizontalAlignment="Left"
                     Margin="100,110,0,0"
                     VerticalContentAlignment="Center"/>

        <!-- Кнопка Войти -->
        <Button Content="Войти"
                Width="250" Height="40"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Margin="100,170,0,0"
                Click="LoginButton_Click" />

        <!-- Надпись для ошибок -->
        <TextBlock x:Name="ErrorTextBlock"
                   Text=""
                   Foreground="Red"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   Margin="0,0,0,20"
                   FontSize="12" />
    </Grid>
</Window>
