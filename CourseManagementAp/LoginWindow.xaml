<Window x:Class="CourseManagementAp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseManagementAp"
        mc:Ignorable="d"
        Title="LoginWindow" Height="265" Width="384">
    <Grid>
        <!-- TextBox для Email -->
        <TextBox x:Name="EmailTextBox" Width="200" Height="30" Margin="92,80,92,139" VerticalContentAlignment="Center"/>
        <TextBlock Text="Email" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="23,87,0,0" Foreground="Gray" RenderTransformOrigin="0.569,0.253"/>

        <!-- PasswordBox для пароля -->
        <PasswordBox x:Name="PasswordTextBox" Width="200" Height="30" Margin="10,50,10,10" VerticalContentAlignment="Center"/>
        <TextBlock Text="Пароль" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="17,137,0,0" Foreground="Gray"/>

        <Button Content="Войти" Width="200" Height="40" Margin="92,176,92,33" Click="LoginButton_Click"/>
    </Grid>
</Window>
